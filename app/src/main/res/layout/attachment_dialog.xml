<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:id="@+id/attachment_dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_popup"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:scrollbarSize="4dp"
    android:scrollbarStyle="insideInset"
    android:scrollbarThumbVertical="@drawable/scroll_bar" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start|left">

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_selector"
            android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
            android:drawablePadding="@dimen/attachment_dialog_drawable_padding"
            android:padding="6dp"
            android:text="camera"
            android:textSize="@dimen/attachment_dialog_text_size"
            pixlui:typeface="Roboto-Regular.ttf"
            android:textColor="@color/text_gray" />

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_selector"
            android:drawableLeft="@drawable/ic_videocam_black_24dp"
            android:drawablePadding="@dimen/attachment_dialog_drawable_padding"
            android:padding="@dimen/attachment_dialog_items_padding"
            android:text="video"
            android:textSize="@dimen/attachment_dialog_text_size"
            pixlui:typeface="Roboto-Regular.ttf"
            android:textColor="@color/text_gray" />

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_selector"
            android:drawableLeft="@drawable/ic_insert_drive_file_black_24dp"
            android:drawablePadding="@dimen/attachment_dialog_drawable_padding"
            android:padding="@dimen/attachment_dialog_items_padding"
            android:text="files"
            android:textSize="@dimen/attachment_dialog_text_size"
            pixlui:typeface="Roboto-Regular.ttf"
            android:textColor="@color/text_gray" />

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/recording"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_selector"
            android:drawableLeft="@drawable/ic_mic_black_24dp"
            android:drawablePadding="@dimen/attachment_dialog_drawable_padding"
            android:padding="@dimen/attachment_dialog_items_padding"
            android:text="record"
            android:textSize="@dimen/attachment_dialog_text_size"
            pixlui:typeface="Roboto-Regular.ttf"
            android:textColor="@color/text_gray" />

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/sketch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_selector"
            android:drawableLeft="@drawable/ic_action_draw"
            android:drawablePadding="@dimen/attachment_dialog_drawable_padding"
            android:padding="@dimen/attachment_dialog_items_padding"
            android:text="sketch"
            android:textSize="@dimen/attachment_dialog_text_size"
            pixlui:typeface="Roboto-Regular.ttf"
            android:textColor="@color/text_gray" />

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_selector"
            android:drawableLeft="@drawable/ic_pin_drop_black_24dp"
            android:drawablePadding="@dimen/attachment_dialog_drawable_padding"
            android:padding="@dimen/attachment_dialog_items_padding"
            android:text="location"
            android:textSize="@dimen/attachment_dialog_text_size"
            pixlui:typeface="Roboto-Regular.ttf"
            android:textColor="@color/text_gray" />

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/pushbullet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_selector"
            android:drawableLeft="@drawable/ic_laptop_black_24dp"
            android:drawablePadding="@dimen/attachment_dialog_drawable_padding"
            android:padding="@dimen/attachment_dialog_items_padding"
            android:text="pushbullet"
            android:visibility="gone"
            android:textSize="@dimen/attachment_dialog_text_size"
            pixlui:typeface="Roboto-Regular.ttf"
            android:textColor="@color/text_gray" />
    </LinearLayout>

</ScrollView>