<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mine_fragment"
    android:background="#d9dada"
    android:orientation="vertical">

    <com.example.silence.xiyang_10.RoundImageButton
        android:id="@+id/round_touxiang"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_gravity="left"
        android:layout_margin="5dp"
        android:background="#00000000"
        android:src="@drawable/ic_touxiang2"/>
    <Button
        android:id="@+id/change_touxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-80dp"
        android:text="更换头像"
        android:gravity="center"
        android:layout_gravity="center"/>
    <com.sackcentury.shinebuttonlib.ShineButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"
        android:src="@android:color/darker_gray"
        android:id="@+id/shine_button"
        app:btn_color="@android:color/darker_gray"
        app:btn_fill_color="#ff000d"
        app:allow_random_color="true"
        app:enable_flashing="false"
        app:siShape="@raw/heart"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="昵称:夏露泛银"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="性别:男"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="QQ:779854387"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="手机:17764590520"/>

    
</LinearLayout>