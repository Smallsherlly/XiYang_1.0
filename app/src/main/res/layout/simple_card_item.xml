<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="3dp"
    android:padding="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="6dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    app:contentPadding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconx"
            android:layout_width="@dimen/simple_card_image_width"
            android:layout_height="@dimen/simple_card_image_height"
            android:background="@android:color/darker_gray"
            android:scaleType="fitXY"
            android:contentDescription="Image" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            tools:ignore="RtlHardcoded">
            <com.sackcentury.shinebuttonlib.ShineButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@android:color/darker_gray"
                android:id="@+id/shine_button"
                app:btn_color="@android:color/darker_gray"
                app:btn_fill_color="#ff000d"
                app:allow_random_color="true"
                app:enable_flashing="false"
                app:siShape="@raw/heart"/>
            <TextView
                android:id="@+id/titlex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:lines="1"
                android:text="Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titlex"
                android:lines="1"
                android:text="Description"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <View
                android:id="@+id/spacerx"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/textx"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonx"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_below="@+id/spacerx"
                android:text="打开模板"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorButton" />

            <TextView
                android:id="@+id/creationx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/buttonx"
                android:layout_below="@id/textx"
                android:layout_alignParentRight="true"
                android:hint="creation"
                />
        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>